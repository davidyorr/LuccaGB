{
	"name": "luccagb",
	"version": "0.0.0",
	"description": "Game Boy emulator",
	"author": "David Orr <davidyorr@gmail.com>",
	"packageManager": "pnpm@10.11.1",
	"scripts": {
		"dev": "concurrently \"pnpm run watch:wasm\" \"vite\"",
		"build": "go version && pnpm run build:wasm && vite build",
		"build:wasm": "GOOS=js GOARCH=wasm go build -o public/main.wasm ./cmd/luccagb",
		"watch:wasm": "chokidar '**/*.go' -c 'GOOS=js GOARCH=wasm go build -o public/main.wasm -tags trace ./cmd/luccagb' --initial",
		"preview": "vite preview",
		"format": "prettier --write '{**/*,*}.{ts,css,html}'",
		"test": "go test ./... -v",
		"test:debug": "go test ./... -tags debug -v",
		"tail": "sh -c 'tail -n ${1:-20} internal/testoutput.log | sed \"s/time=[0-9:.\\-]*[[:space:]]*//; s/level=INFO[[:space:]]*//\"' --",
		"less": "sed \"s/time=[0-9:.\\-]*[[:space:]]*//; s/level=INFO[[:space:]]*//\" internal/testoutput.log | perl -pe 's/^(.*M-CYCLE=1.*)$/\\e[38;5;208m$1\\e[0m/g' | less -R",
		"generate-ppu-test": "go run tools/generate_ppu_test_case/generate_ppu_test_case.go",
		"benchmark:cpu": "go test ./internal/gameboy -bench=BenchmarkRom -benchtime=10s -benchmem -cpuprofile=cpu.out -run=^$",
		"benchmark:mem": "go test ./internal/gameboy -bench=BenchmarkRom -benchtime=10s -memprofile=mem.out -run=^$",
		"benchmark:viz": "go tool pprof -http=:8080"
	},
	"devDependencies": {
		"@types/golang-wasm-exec": "1.15.2",
		"chokidar-cli": "3.0.0",
		"concurrently": "9.1.2",
		"prettier": "3.5.3",
		"typescript": "5.8.3",
		"vite": "6.3.5",
		"vite-plugin-solid": "2.11.10"
	},
	"dependencies": {
		"solid-js": "1.9.11"
	}
}
